# REQUIRED SERVER ENV
NODE_ENV=development

# Database (Supabase)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Mimir Supabase (read-only for game statistics)
MIMIR_SUPABASE_URL=
MIMIR_SUPABASE_ANON_KEY=

# Voi Network Configuration (for on-chain treasury data)
# Contract IDs are stored in the treasury_balances table
VOI_NODE_URL=https://mainnet-api.voi.nodely.dev
VOI_INDEXER_URL=https://mainnet-idx.voi.nodely.dev

# PUBLIC (client) env
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Coinbase CDP Embedded Wallets (REQUIRED for authentication)
# Get these from https://portal.cdp.coinbase.com/
NEXT_PUBLIC_CDP_PROJECT_ID=
NEXT_PUBLIC_CDP_API_KEY_NAME=organizations/your-org/apiKeys/your-key-id
# CDP_API_KEY_PRIVATE_KEY should be the full PEM key (with \n for newlines)
# For ED25519: -----BEGIN PRIVATE KEY-----\nYourKey...\n-----END PRIVATE KEY-----
# For ECDSA: -----BEGIN EC PRIVATE KEY-----\nYourKey...\n-----END EC PRIVATE KEY-----
CDP_API_KEY_PRIVATE_KEY=
